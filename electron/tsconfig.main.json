{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist/main",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["main.js", "lib/**/*.js"],
  "exclude": ["node_modules", "dist", "lib/**/*.ts"]
}
