{
  "name": "cottage-pos-desktop",
  "version": "2.0.0",
  "description": "Cottage Tandoori Professional POS - Desktop Application with Offline Capabilities",
  "main": "dist/main/index.js",
  "author": {
    "name": "Cottage Tandoori Restaurant",
    "email": "support@cottagetandoori.co.uk"
  },
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/Bodzaman/cottage-pos-desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bodzaman/cottage-pos-desktop.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:win": "npm run build && electron-builder --win",
    "build:publish": "npm run build && electron-builder --win --publish=always",
    "start": "electron .",
    "test": "echo \"No tests specified\" && exit 0",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.12.12",
    "@types/serialport": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serialport": "^12.0.0",
    "usb": "^2.11.0",
    "@electron-toolkit/utils": "^1.0.2",
    "node-thermal-printer": "^4.1.2"
  },
  "build": {
    "appId": "uk.co.cottagetandoori.pos",
    "productName": "Cottage Tandoori POS",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "build/icon.ico",
        "to": "resources/icon.ico"
      }
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "publisherName": "Cottage Tandoori Restaurant"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cottage Tandoori POS",
      "include": "build/installer.nsh",
      "installerIcon": "build/installer.ico",
      "uninstallerIcon": "build/installer.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Restaurant Management",
      "license": "build/license.txt"
    },
    "publish": {
      "provider": "github",
      "owner": "Bodzaman",
      "repo": "cottage-pos-desktop",
      "releaseType": "release"
    },
    "electronDownload": {
      "mirror": "https://github.com/electron/electron/releases/download/"
    }
  }
}
