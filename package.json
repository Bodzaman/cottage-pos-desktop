{
  "name": "cottage-tandoori-pos",
  "version": "1.0.1",
  "description": "Cottage Tandoori POS - Professional Desktop Application",
  "main": "main.js",
  "homepage": "https://github.com/Bodzaman/cottage-pos-desktop#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bodzaman/cottage-pos-desktop.git"
  },
  "bugs": {
    "url": "https://github.com/Bodzaman/cottage-pos-desktop/issues"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --no-sandbox",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never",
    "release": "electron-builder --publish=always",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "pos",
    "thermal-printer",
    "restaurant",
    "cottage-tandoori",
    "desktop-app",
    "windows",
    "epson",
    "receipt-printer"
  ],
  "author": {
    "name": "Cottage Tandoori Restaurant",
    "email": "info@cottagetandoori.co.uk",
    "url": "https://cottagetandoori.co.uk"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "electron-updater": "^6.1.0",
    "electron-log": "^5.0.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.cottagetandoori.pos",
    "productName": "Cottage Tandoori POS",
    "copyright": "Copyright \u00a9 2024 Cottage Tandoori Restaurant",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Cottage Tandoori Restaurant",
      "verifyUpdateCodeSignature": false,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "requestedExecutionLevel": "asInvoker",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "signDlls": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cottage Tandoori POS",
      "include": "build/installer.nsh",
      "script": "build/installer.nsh",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Restaurant Management",
      "displayLanguageSelector": false,
      "installerLanguages": [
        "en_US"
      ],
      "language": "1033",
      "multiLanguageInstaller": false,
      "packElevateHelper": true,
      "preCompressedFileExtensions": [
        ".avi",
        ".mov",
        ".mp4",
        ".mp3",
        ".mp2",
        ".qt"
      ],
      "warningsAsErrors": false,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "guid": "12345678-1234-1234-1234-123456789012",
      "differentialPackage": false
    },
    "publish": {
      "provider": "github",
      "owner": "Bodzaman",
      "repo": "cottage-pos-desktop",
      "private": false,
      "releaseType": "release",
      "publishAutoUpdate": true
    },
    "compression": "maximum",
    "generateUpdatesFilesForAllChannels": true,
    "detectUpdateChannel": true
  }
}