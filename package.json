{
  "name": "cottage-tandoori-pos",
  "version": "1.0.5",
  "description": "Cottage Tandoori POS - Professional Desktop Application",
  "main": "main.js",
  "homepage": "https://github.com/Bodzaman/cottage-pos-desktop#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bodzaman/cottage-pos-desktop.git"
  },
  "bugs": {
    "url": "https://github.com/Bodzaman/cottage-pos-desktop/issues"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --no-sandbox",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never",
    "release": "electron-builder --publish=always",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "pos",
    "thermal-printer",
    "restaurant",
    "cottage-tandoori",
    "desktop-app",
    "windows",
    "epson",
    "receipt-printer"
  ],
  "author": {
    "name": "Cottage Tandoori Restaurant",
    "email": "info@cottagetandoori.co.uk",
    "url": "https://cottagetandoori.co.uk"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "electron-updater": "^6.1.0",
    "electron-log": "^5.0.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.cottage.tandoori.pos",
    "productName": "Cottage Tandoori POS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cottage Tandoori POS",
      "displayLanguageSelector": false,
      "installerLanguages": [
        "en_US"
      ],
      "license": null,
      "warningsAsErrors": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Bodzaman",
        "repo": "cottage-pos-desktop"
      }
    ],
    "compression": "maximum",
    "removePackageScripts": true
  }
}