{
  "name": "cottage-tandoori-pos",
  "version": "1.0.0",
  "description": "Professional Desktop POS System for Cottage Tandoori Restaurant",
  "main": "dist/main/main.js",
  "homepage": "https://github.com/Bodzaman/cottage-pos-desktop",
  "author": {
    "name": "Cottage Tandoori",
    "email": "support@cottagetandoori.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@electron-toolkit/preload": "^3.0.0",
    "node-thermal-printer": "^4.4.2",
    "better-sqlite3": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "zustand": "^4.4.1",
    "lucide-react": "^0.263.1",
    "sonner": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.6",
    "date-fns": "^2.30.0",
    "@supabase/supabase-js": "^2.26.0",
    "@stripe/stripe-js": "^2.1.0",
    "clsx": "^2.0.0",
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "@types/node": "^20.10.5",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "tailwindcss": "^3.3.3",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.27"
  },
  "build": {
    "appId": "com.cottagetandoori.pos",
    "productName": "Cottage Tandoori POS",
    "directories": {
      "output": "dist",
      "app": "."
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "publisherName": "Cottage Tandoori",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cottage Tandoori POS",
      "runAfterFinish": true,
      "allowElevation": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Bodzaman",
        "repo": "cottage-pos-desktop",
        "private": false,
        "token": null,
        "publishAutoUpdate": true
      }
    ],
    "copyright": "Copyright \u00a9 2025 Cottage Tandoori",
    "description": "Professional POS system for Cottage Tandoori restaurant"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bodzaman/cottage-pos-desktop.git"
  }
}