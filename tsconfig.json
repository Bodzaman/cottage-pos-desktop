{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["renderer/*"],
      "app": ["renderer/lib/app-compat.ts"],
      "brain/*": ["renderer/brain/*"],
      "constants/*": ["renderer/constants/*"],
      "components/*": ["renderer/components/*"],
      "pages/*": ["renderer/pages/*"],
      "utils/*": ["renderer/utils/*"],
      "types": ["renderer/types/index.ts"],
      "types/*": ["renderer/types/*"]
    }
  },
  "include": [
    "src/**/*",
    "renderer/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
